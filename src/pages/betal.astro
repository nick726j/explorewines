---
import MainLayout from "../layouts/MainLayout.astro";
import Button from '../components/Button.astro';
import Link from '../components/Link.astro';
import { Image } from 'astro:assets';
import betaltegning from "../assets/images/betaltegning.svg";
import vin1 from "../assets/images/vin1.webp";
import hvidvin from "../assets/images/hvidvin.webp";
import roedvin from "../assets/images/roedvin.webp";
import step1 from "../assets/images/1_3svg.svg";
---
<MainLayout title="Step 1/3">
	<!-- Købsflow Side -->
<section class="text-black">
  <div class="grid grid-cols-1 md:grid-cols-6 mx-auto">
    <!-- Venstre Illustration -->
    <div class="hidden md:block md:col-span-2 items-center">
      <div class="relative h-full border-r border-brown">

        
        <!-- Illustration -->
        <img class="md:object-cover w-full h-auto" src={step1.src} alt="kasse og vin" />
      </div>
    </div>

    <!-- Højre Indhold -->
    <div class="-mt-20 md:mt-10 md:col-span-4 my-4 md:mx-16 lg:mx-24 xl:mx-32 md:my-12 flex justify-center items-center min-h-screen">
      <div class="border border-brown inline-block">


      <!-- knap -->
                 <div class=" md:mb-5">
                  <a href="javascript:history.back()">
                      <Button variant="back"></Button>
                    </a>
                </div>

        <!-- Titel -->
        <div class="ml-6 mb-6 mt-6 flex justify-between items-center">
          <h2>KASSE</h2>
          <p class="text-mmb md:text-m mr-6">Trin 1/3</p>
        </div>

        <!-- Produktliste -->
        <div class="border-t border-b border-brown">
          <!-- Første Produkt -->
          <div class="flex flex-wrap items-center py-4 -mt-2 -mb-6">
            <img src={roedvin.src} alt="Rødvinskasse" class="w-20 h-28 md:w-[15%] md:h-[20%] object-cover mr-4" />
            <div class="flex-1 ml-6 md:-mt-20 -mt-8">
              <p class="text-mmb md:text-m">Rødvinskasse (abonnement)</p>
            </div>
            <div class="flex items-center space-x-2 md:mt-[10rem]">
              <button class="text-mmb md:text-m">-</button>
              <span class="text-mmb md:text-m ">1 stk</span>
              <button class="text-xl">+</button>
            </div>
            <div class="text-mmb md:text-m ml-4 text-right mr-6 md:-mt-14 -mt-8">
              <p class="">599,-</p>
              <a href="#" class="text-red-700 text-sm  ">fjern x</a>
            </div>
          </div>

          

          <!-- Andet Produkt -->
    

          <div class="flex flex-wrap items-center py-4 ">
                        <div class="h-px w-full bg-brown mb-4"></div>
            <img src={vin1.src} alt="Chardonnay" class="w-20 h-28 object-cover mr-4 md:w-[15%] md:h-[20%] -mt-2 -mb-2" />
            <div class="flex-1">
              <p class="text-mmb md:text-m ml-6 md:-mt-14 -mt-8">2023 Chardonnay, Terre Siciliane IGP</p>
            </div>
            <div class="flex items-center space-x-2 md:mt-[10rem]">
              <button class="text-xl">-</button>
              <span class="text-mmb md:text-m ">1 stk</span>
              <button class="text-xl">+</button>
            </div>
            <div class="text-mmb md:text-m text-right mr-6 md:-mt-14 -mt-8">
              <p>450,-</p>
              <a href="#" class="text-red-700 text-sm">fjern x</a>
            </div>
          </div>
        </div>

        <!-- Total -->
        <div class=" ml-6 text-mmb md:text-flex justify-between items-center mt-6 text-lg font-medium">
          <span>I alt</span>
          <span class="md:ml-[38rem] ml-[19rem]">1049 kr.</span>
        </div>

        <!-- Knapper -->
        <div class="flex justify-center gap-4 mt-8 mb-6">


          <!-- Næste Knap -->
          <a href="/betal2">
            <Button>Næste</Button>
          </a>


        </div>
          </div>
        </div>
      </div>
