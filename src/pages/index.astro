			<img class="md:object-cover :w-full h-auto" src={bordvin.src} alt="Bord med vinglas">
    </div>
  </div>
</section>

  																<!-- Nyhedsbrev section -->
		<section class="md:mt-36 md:mb-36 md:pl-10">
  <div class="mx-auto grid grid-cols-1 md:grid-cols-2 items-center md:gap-14 gap-8">
    <!-- Venstre Content -->
	   <div class="flex justify-center">
			<img class="hidden md:block md:object-cover :w-full h-auto" src={collage.src} alt="Samling af stemningsbilleder">
			<img class="pl-10 pr-10 md:pr-0 md:pl-0 md:hidden md:object-cover :w-full h-auto" src={collagem.src} alt="Samling af stemningsbilleder">
     </div>

    <!-- Højre Content-->
    <div class="mb-20">
      <p class=" ml-6 md:mr-0 md:ml-16 tracking-wide text-m md:text-l">Tilmelding til nyhedsbrev</p>
      <h2 class=" ml-6 md:mr-0 md:ml-16 uppercase leading-tight mb-4 mt-2">FÅ 10% PÅ DIN FØRSTE ORDRE</h2>
        <!--  Input fælt -->
    <form class=" ml-6 md:mr-20 md:ml-16 mr-6 flex flex-row items-center  overflow-hidden">
      <input 
        type="email" 
        placeholder="Skriv din e-mail her..." 
        class="flex-grow px-4 py-3 bg-creamywhite"
        required
      />
      <button 
        type="submit" 
        class="flex items-center justify-center px-6 py-3 border-r border-y border-brown text-lg font-medium hover:bg-red-700 hover:text-orange transition">
        →
      </button>
    </form>
      <p class=" ml-6 md:mr-20 md:ml-16 text-smb md:text-s  mt-2">
