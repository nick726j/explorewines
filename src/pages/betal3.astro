---
import MainLayout from "../layouts/MainLayout.astro";
import Button from '../components/Button.astro';
import Link from '../components/Link.astro';
import { Image } from 'astro:assets';
import thumbsup from "../assets/images/thumbsup.png";
import betaltegning from "../assets/images/betaltegning.svg";
---
<MainLayout title="Titel">

<!-- Købsflow Side -->
<section class="text-black px-8">
  <div class="grid grid-cols-1 md:grid-cols-6 mx-auto">
    <!-- Venstre Illustration -->
    <div class="hidden md:block md:col-span-2 items-center">
      <div class="relative h-full border-r border-black">
        <!-- Illustration -->
        <img class="md:object-cover w-full h-auto" src={betaltegning.src} alt="kasse og vin" />
      </div>
    </div>

    <!-- Højre Indhold -->
    <div class="md:col-span-4 my-4 md:mx-16 lg:mx-24 xl:mx-32 md:my-12 flex justify-center items-center min-h-screen">
      <div class="border border-black p-6 md:p-12 inline-block w-full">

        <!-- Titel -->
        <h2 class="text-xl md:text-3xl font-bold text-red-700 mb-6">
          ADRESSE <span class="text-xs sm:text-sm text-black float-right">Trin 3/3</span>
        </h2>

        <!-- Formular -->
        <form>
          <!-- Adresse -->
          <div class="mb-6 text-left">
            <label for="address" class="block text-gray-700 font-medium mb-2">Adresse</label>
            <input
              type="text"
              id="address"
              placeholder="Indtast din adresse..."
              class="w-full border border-black p-3 focus:outline-none focus:ring-2 focus:ring-red-500"
            />
          </div>

          <!-- Postnummer -->
          <div class="mb-6 text-left">
            <label for="zip" class="block text-gray-700 font-medium mb-2">Postnummer</label>
            <input
              type="number"
              id="zip"
              placeholder="Indtast dit postnummer"
              class="w-full border border-black p-3 focus:outline-none focus:ring-2 focus:ring-red-500"
            />
          </div>

          <!-- By -->
          <div class="mb-6 text-left">
            <label for="city" class="block text-gray-700 font-medium mb-2">By</label>
            <input
              type="text"
              id="city"
              placeholder="Indtast din by..."
              class="w-full border border-black p-3 focus:outline-none focus:ring-2 focus:ring-red-500"
            />
          </div>

          <!-- Checkbox 1 -->
          <div class="flex items-start mb-4">
            <input
              type="checkbox"
              id="confirmInfo"
              class="mt-1 w-5 h-5 text-red-700 border-gray-300 focus:ring-red-500"
            />
            <label for="confirmInfo" class="ml-3 text-gray-700">
              Jeg har sikret mig at ovenstående information er 100% korrekte.
            </label>
          </div>

          <!-- Checkbox 2 -->
          <div class="flex items-start mb-8">
            <input
              type="checkbox"
              id="privacyPolicy"
              class="mt-1 w-5 h-5 text-red-700 border-gray-300 focus:ring-red-500"
            />
            <label for="privacyPolicy" class="ml-3 text-gray-700">
              Jeg har læst jeres privatpolitik og generelle bestemmelser og er indforstået med begge.
            </label>
          </div>
        </form>
        <!-- Knapper -->
          <div class="flex justify-center gap-4">
            <!-- Tilbage Knap -->
            <a href="/betal2">
              <Button variant="secondary"></Button>
            </a>

            <!-- Næste Knap -->
            <a href="/tak">
              <Button>Næste</Button>
            </a>
          </div>
      </div>
    </div>
  </div>
</section>

</MainLayout>