---
import MainLayout from "../layouts/MainLayout.astro";
import Button from '../components/Button.astro';
import Link from '../components/Link.astro';
import { Image } from 'astro:assets';
import thumbsup from "../assets/images/thumbsup.png";
import betaltegning from "../assets/images/betaltegning.svg";
import taktegning from "../assets/images/taktegning.svg";
---
<MainLayout title="Tak for din bestilling">


<!-- Købsflow Side -->
<section class="text-black">
  <div class="grid grid-cols-1 md:grid-cols-6">
    <!-- Venstre Illustration -->
    <div class="hidden md:block md:col-span-2 items-center	">
      <div class="relative h-full border-r border-brown">
        <!-- Illustration -->
    <img class="md:object-cover :w-full h-auto" src={taktegning.src} alt="kasse og vin">
      </div>
    </div>

    
    <!-- Højre Indhold -->
         <div class=" mt-20 md:mt-36 md:col-span-4 my-4 md:mx-16 lg:mx-24 xl:mx-32 md:my-12 min-h-screen">
  <div class="border border-black p-6 md:p-12 inline-block text-center mx-8">

    <!-- Knap -->
  <div class=" mr-[22rem] md:mr-[40rem] md:mb-5">
         <a href="javascript:history.back()">
            <Button variant="back"></Button>
          </a>
  </div>
          
    <!-- Titel -->
    <h2 class="mb-6">
      TAK FOR DIN BESTILLING
    </h2>


      <!-- Overskrift -->
      <p class="text-smb md:text-m mb-6">
        Kære <span class="">[ Kundens navn ]</span>,
      </p>

      <!-- Hovedtekst -->
      <p class="text-smb md:text-m leading-relaxed mb-6">
        Velkommen til vores vinklub. Dit abonnement er bekræftet, og du vil indenfor få minutter modtage en mail 
        med en oversigt over dit køb. Du modtager vinen inden for 
        <strong>7 arbejdsdage</strong>, og du har allerede nu fuld adgang til alle de fordele og funktioner, vi tilbyder.
      </p>

      <!-- Ekstra Besked -->
      <p class="text-smb md:text-m leading-relaxed mb-8">
        Kan du ikke få nok af vin? Udforsk vores vinshop via knappen nedenfor.
      </p>

<!-- Knapper -->
<div class="flex justify-center gap-4">
  <!-- Tilbage Knap -->

  <!-- Næste Knap -->
  <a href="/">
    <Button>Shop videre</Button>
  </a>
</div>

  </div>
</div>

</section>

  <img class=" ml-[8rem] -mt-[22rem] mb-10 block sm:hidden md:object-cover w-[50%] h-[70%] object-cover " src={taktegning.src} alt="kasse og vin">


</MainLayout>